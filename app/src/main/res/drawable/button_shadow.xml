<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_button"/>
            <corners android:radius="25dp"/> <!-- Sesuaikan sesuai kebutuhan -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/> <!-- Bayangan -->
            <gradient android:startColor="#40000000" android:endColor="#00000000" android:angle="270"/> <!-- Bayangan -->
        </shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_button"/> <!-- Warna Button -->
            <corners android:radius="25dp"/> <!-- Sesuaikan sesuai kebutuhan -->
        </shape>
    </item>
</layer-list>
